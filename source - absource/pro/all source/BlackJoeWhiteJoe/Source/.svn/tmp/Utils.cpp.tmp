	{
		pwsprintfA( BotId + m_lstrlen( BotId ), "%d", dwSerial );
	}

	MD5_CTX ctx;	

	MD5Init(&ctx);
	MD5Update( &ctx, (unsigned char*)BotId, m_lstrlen( BotId ) );

	unsigned char buff[16];	

	MD5Final( buff, &ctx );

	char UidHash[33];

	int p = 0;

	for( int i = 0; i < 16; i++ )
	{
		pwsprintfA( &UidHash[p], "%02X", buff[i] );
		p += 2;
	}	
	
