DWORD GetVerbNum( char *Verb )
{
	if ( Verb[0] == 'G' )
	{
		return VERB_IS_GET;
	}
	else if ( Verb[0] == 'P' )
	{
		return VERB_IS_POST;
	}

	return -1;
}
